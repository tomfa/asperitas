{
  "version": 2,
  "env": {
    "DATABASE_URL": "@asperitas-database-url",
    "REACT_APP_GOOGLE_CLIENT_ID": "@aco-google-client-id"
  },
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/?(.*)", "dest": "/server"},
    { "src": "/static/(.*)", "dest": "/client/static/$1" },
    { "src": "/.*", "dest": "/client" }
  ]
}
